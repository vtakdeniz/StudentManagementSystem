@model IEnumerable<StudentManagementSystem.Models.Lecture>;


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lectures</h2>
        </div>
        <div class="col-6">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp;Create new lecture
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">

            <thead>
                <tr>
                    <th>
                        Lecture Name
                    </th>
                    <th>
                        Classroom Code
                    </th>
                    <th>
                        Lecturer
                    </th>
                    <th>
                        Lecture year
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="50%">
                        @obj.lecture_name
                    </td>
                    <td width="50%">
                        @obj.classroom_code
                    </td>
                    <td width="50%">
                        @obj.lecturer.first_name &nbsp; @obj.lecturer.last_name
                    </td>
                    <td width="50%">
                        @obj.lecture_year
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No lecture exists</p>
    }
</div>