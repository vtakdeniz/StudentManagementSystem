@model StudentManagementSystem.Models.Lecture
<form method="post" asp-action="DeleteLecture">
    <input asp-for="Id" hidden />
    <input asp-for="lecturer" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Delete a lecture</h2>
        </div>
        <div class="row">
            <div class="col-8">

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="lecture_name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="lecture_name" disabled class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="classroom_code"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="classroom_code" disabled class="form-control" />
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="lecture_year"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="lecture_year" class="form-control" />
                        <span asp-validation-for="lecture_year" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
            </div>
        </div>
    </div>

</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}