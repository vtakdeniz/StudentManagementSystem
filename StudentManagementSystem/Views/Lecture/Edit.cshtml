@model StudentManagementSystem.Dto.LectureViewModel

<form method="post" asp-action="Edit">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Edit Lecture</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="lecture_name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="lecture_name" class="form-control" />
                        <span asp-validation-for="lecture_name" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="classroom_code"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="classroom_code" class="form-control" />
                        <span asp-validation-for="classroom_code" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="lecture_year"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="lecture_year" class="form-control" />
                        <span asp-validation-for="lecture_year" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                            <label for="dropdown">Teachers</label>
                            <select asp-for="teacher_id" asp-items="@(new SelectList((List<Teacher>)ViewBag.teachers, nameof(Teacher.Id), nameof(Teacher.first_name)))">
                                <optgroup label="Please select one teacher"></optgroup>
                            </select>
                        </div>
                    </div>

                </div>
                @if (TempData["isClassroomCodeDuplicate"] != null && (bool)TempData["isClassroomCodeDuplicate"] == true)
                {
                    <span class="text-danger">Classroom with the same class code already exists!</span><br><br>
                }
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Update" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
            </div>
        </div>
    </div>

</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}