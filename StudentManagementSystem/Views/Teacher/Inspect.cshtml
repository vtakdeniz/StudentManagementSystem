@model StudentManagementSystem.Models.Teacher

@{TempData["student_id"] = @Model.Id;}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Teacher's Information</h2>
        </div>
    </div>

    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">

        <thead>
            <tr>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Age
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td width="50%">
                    @Model.first_name
                </td>
                <td width="50%">
                    @Model.last_name
                </td>
                <td width="50%">
                    @Model.age
                </td>

            </tr>
        </tbody>
    </table>

    <br /><br />
    <h2 class="text-primary">Teacher's classes</h2>
    <br />

    <br />
    @if (ViewBag.lecturesOfTeacher != null && ((List<Lecture>)ViewBag.lecturesOfTeacher).Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">

            <thead>
                <tr>
                    <th>
                        Lecture Name
                    </th>
                    <th>
                        Classroom Code
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in ((List<Lecture>)ViewBag.lecturesOfTeacher))
                {
                    <tr>
                        <td width="50%">
                            @obj.lecture_name
                        </td>
                        <td width="50%">
                            @obj.classroom_code
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <br /><br />

    }
    else
    {
        <p>Teacher doesn't have any classes</p>
        <br /><br />
    }

    <div class="col">
        <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
    </div>
</div>