@model StudentManagementSystem.Models.Student

<form method="post" asp-action="Edit">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Edit a Student</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="first_name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="first_name" class="form-control" />
                        <span asp-validation-for="first_name" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="last_name"></label>
                    </div>      
                    <div class="col-8">
                        <input asp-for="last_name" class="form-control" />
                        <span asp-validation-for="last_name" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="age"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="age" class="form-control" />
                        <span asp-validation-for="age" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="enrollment_date"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="enrollment_date" class="form-control" />
                        <span asp-validation-for="enrollment_date" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="class_year"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="class_year" class="form-control" />
                        <span asp-validation-for="class_year" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="school_number"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="school_number" class="form-control" />
                        <span asp-validation-for="school_number" class="text-danger"></span>
                    </div>

                </div>
                @if (TempData["isSchoolNumberDuplicate"] != null && (bool)TempData["isSchoolNumberDuplicate"] == true)
                {
                    <span class="text-danger">Student with a same school number already exists!</span><br><br>
                }
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Update" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
            </div>
        </div>
    </div>

</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}