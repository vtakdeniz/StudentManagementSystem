@model IEnumerable<StudentManagementSystem.Models.Student>;


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Students</h2>
        </div>
        <div class="col-6">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp;Create new student
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">

            <thead>
                <tr>
                    <th>
                        School number
                    </th>
                    <th>
                        Class Year
                    </th>
                    <th>
                        First name
                    </th>
                    <th>
                        Last name
                    </th>
                    <th>
                        Age
                    </th>
                    <th>
                        Enrollment Date
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="50%">
                        @obj.school_number
                    </td>
                    <td width="50%">
                        @obj.class_year
                    </td>
                    <td width="50%">
                        @obj.first_name
                    </td>
                    <td width="50%">
                        @obj.last_name
                    </td>
                    <td width="50%">
                        @obj.age
                    </td>
                    <td width="50%">
                        @obj.enrollment_date
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No student exists</p>
    }
</div>